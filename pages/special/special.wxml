<!--pages/special/special.wxml-->

<view>
 <view class='nav bg-white' style='height:{{navH}}px'>
    <view class='nav-title'>
      精选
      <image src='../../image/back.png' class='back' bindtap='back'></image> 
    </view>
  </view>

<scroll-view class='bg-white overflow container' style='height:calc(100vh - {{navH}}px)' scroll-y >

  <view class='ul'>
    <view class='li' wx:for="{{articleTypes}}">
      <view class='item'>
        <image class='circle' bindtap='selectAll' data-name='{{item.article_type_name}}' data-id='{{item.article_type_id}}' data-image='{{item.iamge_back}}' src='{{imageUrl+item.iamge_icon}}'></image>
        <view class='li_content' bindtap='selectAll' data-name='{{item.article_type_name}}' data-id='{{item.article_type_id}}' data-image='{{item.iamge_back}}'>
          <view class='li_title'>{{item.article_type_name}}</view>
          <view class='li_subTitle'>{{item.article_type_keyword}}</view>
        </view>
        <image class='right_icon' src='../../image/success.png' wx:if="{{item.type_id==1}}" data-index='{{index}}' bindtap='quxiao'></image>
        <image class='right_icon' src='../../image/dingyue.png' wx:elif="{{item.type_id==2}}" data-index='{{index}}' bindtap='dingyue'></image>
      </view>
      <view class='li_line'></view>
    </view>
  </view>
</scroll-view>
</view>